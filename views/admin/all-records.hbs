<div class="container d-none d-md-block">
  <div class="d-flex justify-content-center align-items-center">
    <div class="card w-75 my-3{{#if userProfile.isAdmin}}border-success border-3{{/if}}">
      <div class="row g-1">
        <div class="col-md-4 d-flex justify-content-center align-items-center">
          {{#if userProfile.photo}}
          <img src="{{userProfile.photo}}" width="100px" height="100px" style="transition: opacity 0.5s; opacity:0;"
            onload="this.style.opacity=1;" />
          {{else}}
          <img
            src="https://blogger.googleusercontent.com/img/b/R29vZ2xl/AVvXsEjhZof730mrjOz5V7uKnP6I7WHry7hAdRVFTuEvTIDTnty5Vjrm6JHqh5jfCJp7VRE4TubG8EDyYT-loxD9q3z1rtyLxNEo51yXcePHsM41xaf2Fp54Ibmj1NlxjVDZcoVS3a1jI0y22uo/s800/search_mushimegane.png"
            width="100px" height="100px" style="transition: opacity 0.5s; opacity:0;" onload="this.style.opacity=1;" />
          {{/if}}
        </div>

        <div class="col-md-8 d-flex justify-content-end">
          <div class="card-body">
            <h5 class="card-title"><i class="fa-regular fa-circle-user"></i> <strong>姓名：{{userProfile.name}}</strong>
            </h5>
            <p class="card-text"><i class="fa-solid fa-at fa-lg"></i> <strong>信箱：{{userProfile.email}}</strong></p>
            <p class="card-text"><i class="fa-regular fa-address-book fa-lg"></i> <strong>自我介紹：</strong></p>
            <p class="card-text">{{userProfile.intro}}</p>
          </div>

          <div class="align-self-end m-3">
            <a class="btn btn-outline-secondary" href="javascript:history.back()">返回</a>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

{{> admin-user-data-tabs route='allRecords'}}

{{#if noContent}}
<p class="fs-3 text-center">No Records</p>
{{/if}}

<div class="row mt-2">
  {{#each records}}
  <div class="col-6">
    <div class="card">
      <div class="card-header">
        <strong>Record time : {{fullDateTime this.createdAt}}</strong>
      </div>
        <p class="m-2">{{this.medicalRecord}}</p>
      <div class="card-body">
      </div>
    </div>
  </div>
  {{/each}}
</div>

<nav class="mt-3" aria-label="page navigation">
  <ul class="pagination justify-content-center">
    <li class="page-item {{#ifCond pagination.currentPage 1}}disabled{{/ifCond}}  {{#if noContent}}disabled{{/if}}">
      <a class="page-link" href="/admin/users/{{tab.userId}}/medRecords?page={{pagination.prev}}" aria-label="Previous">
        <span aria-hidden="true">&laquo;</span>
      </a>
    </li>
    {{#each pagination.pages}}
    {{#ifCond this ../pagination.currentPage}}
    <li class="page-item active"><a class="page-link" href="#">{{this}}</a></li>
    {{else}}
    <li class="page-item">
      <a class="page-link" href="/admin/users/{{../tab.userId}}/medRecords?page={{this}}">{{this}}</a>
    </li>
    {{/ifCond}}
    {{/each}}
    <li class="page-item {{#ifCond pagination.currentPage pagination.totalPage}}disabled{{/ifCond}}">
      <a class="page-link" href="/admin/users/{{tab.userId}}/medRecords?page={{pagination.next}}" aria-label="Next">
        <span aria-hidden="true">&raquo;</span>
      </a>
    </li>
  </ul>
</nav>