{{> admin-patient-data}}

<ul class="nav nav-pills mt-1 mb-4">
  <li class="nav-item">
    <a class="nav-link active" href="/admin/patients/{{tab.dataId}}">NOTES</a>
  </li>

  <li class="nav-item">
    <a class="nav-link" href="/patients/{{tab.dataId}}">PATIENT'S SOCIAL</a>
  </li>
</ul>

{{#each patient.Notes}}
  <form action="/admin/notes/{{this.id}}?_method=DELETE" method="POST" class="float-end">
    <button type="submit" class="btn btn-danger" onclick="return confirm('Confirm the deletion？')">Delete</button>
  </form>

  <blockquote class="blockquote mb-0">
    <h4><a href="/users/{{this.User.id}}">{{this.User.name}}</a></h4>
    <p>{{this.text}}</p>
    <footer class="blockquote-footer text-end">{{simpleDateTime this.createdAt}}</footer>
  </blockquote>
  <hr />
{{/each}}

<form action="/admin/notes" method="POST">
  <div class="form-row mb-3">
    <label class="form-label fw-bold" for="text">Send your note：</label>
    <textarea class="form-control" id="text" name="text" rows="3"></textarea>
  </div>
  <input type="hidden" name="patientId" value="{{patient.id}}" />
  <div class="d-flex justify-content-end">
    <button type="submit" class="btn btn-primary me-2">Submit</button>
    <a class="btn btn-outline-secondary" href="javascript:history.back()">Back</a>
  </div>
</form>