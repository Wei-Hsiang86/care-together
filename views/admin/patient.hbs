{{> admin-patient-data}}

{{> admin-patient-data-tabs route='notes'}}

{{#each patient.Notes}}
  <blockquote class="blockquote mb-0">
    <h4><a href="/users/{{this.User.id}}">{{this.User.name}}</a></h4>
    <p>{{this.text}}</p>
    <footer class="blockquote-footer">{{relativeTimeFromNow this.createdAt}}</footer>
  </blockquote>
  <hr />
{{/each}}

<form action="/admin/patients/{{patient.id}}/notes" method="POST">
  <div class="form-row mb-3">
    <label class="form-label fw-bold" for="text">Send your noteï¼š</label>
    <textarea class="form-control" id="text" name="text" rows="3"></textarea>
  </div>
  <input type="hidden" name="patientId" value="{{patient.id}}" />
  <div class="d-flex justify-content-end">
    <button type="submit" class="btn btn-primary me-2">Submit</button>
    <a class="btn btn-outline-secondary" href="javascript:history.back()">Back</a>
  </div>
</form>